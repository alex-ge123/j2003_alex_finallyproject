<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qianfeng.j2003.mapper.CourseMapper">
    <resultMap id="courseMap" type="com.qianfeng.j2003.vo.CourseVo">
        <id property="s_id" column="s_id"></id>
        <result property="s_name" column="s_name"></result>
        <result property="s_liveTime" column="s_livetime"></result>
    </resultMap>
    <select id="findCoursesBySubId" parameterType="int" resultMap="courseMap">
        select s_id,s_name,s_livetime
        from
        tb_course course,
        tb_subject sub
        where sub.sub_id = #{id}
        AND sub.teacher_id = course.t_id
    </select>
</mapper>
