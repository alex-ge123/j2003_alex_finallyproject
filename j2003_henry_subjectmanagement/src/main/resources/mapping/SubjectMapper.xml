<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.j2003.mapper.SubjectMapper">
    <resultMap id="SubjectMap" type="com.qf.j2003.po.Subject">
        <id property="subId" column="sub_id"/>
        <result property="subDesc" column="sub_miaoshu" />
        <result property="liveTime" column="startlivetime" />
        <result property="pictureUrl" column="pictureurl" />
        <result property="subType" column="subtype" />
    </resultMap>
    <sql id="SubjectList">
    sub_id,sub_miaoshu,startlivetime,pictureurl,subtype
    </sql>

    <select id="selectAllSubejectByType" resultMap="SubjectMap">
        select
         <include refid="SubjectList"/>
         from tb_subject where subtype = #{subType}
    </select>
</mapper>